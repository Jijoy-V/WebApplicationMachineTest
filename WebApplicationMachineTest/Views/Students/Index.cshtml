@model WebApplicationMachineTest.VieModels.StudentRecordViewModel

@{
    ViewData["Title"] = "My Academic Record";
}

<div class="container mt-5">

    <div class="card shadow-lg">

        <!-- HEADER -->
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">My Academic Record</h4>
            <a asp-controller="Account" asp-action="Logout" class="btn btn-light btn-sm">
                Logout
            </a>
        </div>

        <!-- BODY -->
        <div class="card-body">

            <!-- STUDENT DETAILS -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <strong>Full Name:</strong>
                    <p>@Model.FullName</p>
                </div>

                <div class="col-md-6">
                    <strong>Roll Number:</strong>
                    <p>@Model.RollNumber</p>
                </div>
            </div>

            <!-- MARKS TABLE -->
            <table class="table table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Subject</th>
                        <th>Marks</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Maths</td>
                        <td>@Model.Maths</td>
                    </tr>
                    <tr>
                        <td>Physics</td>
                        <td>@Model.Physics</td>
                    </tr>
                    <tr>
                        <td>Chemistry</td>
                        <td>@Model.Chemistry</td>
                    </tr>
                    <tr>
                        <td>English</td>
                        <td>@Model.English</td>
                    </tr>
                    <tr>
                        <td>Programming</td>
                        <td>@Model.Programming</td>
                    </tr>
                </tbody>
            </table>

            <!-- LAST UPDATED -->
            <div class="mt-3 text-end">
                <small class="text-muted">
                    Last Updated:
                    @Model.LastUpdated.ToString("dd MMM yyyy hh:mm tt")
                </small>
            </div>

        </div>

    </div>

</div>